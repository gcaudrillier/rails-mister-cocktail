<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1591243315780-978fd00ff9db?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container d-flex">
  <div class="w-50 superimposed">
    <ul class="list-group list-group-flush rounded-lg">
      <li class="list-group-item list-group-item-primary text-center"><h3 class="m-0 p-2">Ingredients :</h3></li>
      <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= dose.description %> of <%= dose.ingredient.name %></span>
        <%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
      </li>
      <% end %>
    </ul>
  </div>

</div>


