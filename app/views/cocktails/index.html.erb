<div id="banner">
  <div class="container d-flex justify-content-center">
    <h1>All Cocktails</h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-around">
    <% @cocktails.each do |cocktail| %>
    <div class="card-category">
      <div>
        <%= link_to cocktail_path(cocktail) do %>
          <div>
            <h3><%= cocktail.name %></h3>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>

  </div>
</div>




